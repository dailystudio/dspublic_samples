<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="NoteInput">
        <item name="android:background">@null</item>
        <item name="android:padding">@dimen/default_app_item_padding</item>
    </style>

    <style name="NoteTitleInput" parent="NoteInput">
        <item name="android:singleLine">true</item>
    </style>

    <style name="NoteTitleContent" parent="NoteInput">
        <item name="android:gravity">top|left</item>
    </style>

    <style name="NoteCardTitle">
        <item name="android:gravity">start|center_vertical</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/note_card_title_font_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingStart">@dimen/note_card_text_padding_h</item>
        <item name="android:paddingEnd">@dimen/note_card_text_padding_h</item>
        <item name="android:paddingTop">@dimen/note_card_text_padding_v</item>
        <item name="android:paddingBottom">@dimen/note_card_text_padding_v</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="NoteCardContent">
        <item name="android:gravity">start|center_vertical</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">@dimen/note_card_content_font_size</item>
        <item name="android:paddingStart">@dimen/note_card_text_padding_h</item>
        <item name="android:paddingEnd">@dimen/note_card_text_padding_h</item>
        <item name="android:paddingTop">@dimen/note_card_text_padding_v</item>
        <item name="android:paddingBottom">@dimen/note_card_text_padding_v</item>
        <item name="android:maxLines">4</item>
    </style>

    <style name="NoteCardContentDisabled" parent="NoteCardContent">
        <item name="android:textColor">@color/gray</item>
    </style>

    <style name="NoteCardFooter">
        <item name="android:gravity">end|center_vertical</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/note_card_footer_font_size</item>
        <item name="android:padding">@dimen/note_card_footer_padding</item>
        <item name="android:singleLine">true</item>
    </style>

</resources>
