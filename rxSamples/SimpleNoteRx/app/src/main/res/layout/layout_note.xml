<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/DefaultCardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="@dimen/card_height">

        <TextView
            android:id="@+id/note_title"
            style="@style/NoteCardTitle"
            android:background="@drawable/card_header_bg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
<!--

        <View
            android:id="@+id/note_separator"
            android:background="@color/colorPrimary"
            android:layout_margin="@dimen/note_card_separator_margin"
            android:layout_below="@id/note_title"
            android:layout_width="match_parent"
            android:layout_height="2px"/>
-->

        <TextView
            android:id="@+id/note_content"
            style="@style/NoteCardContent"
            android:layout_below="@id/note_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/note_footer"
            style="@style/NoteCardFooter"
            android:background="@drawable/round_bg"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="@dimen/note_card_footer_margin"
            android:layout_marginBottom="@dimen/note_card_footer_margin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>

</android.support.v7.widget.CardView>
